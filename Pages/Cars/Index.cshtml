@page
@using RentCar.model;
@using rent_car;
@model CarRentwep.Pages.Cars.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

    <div class="container mt-3">
<h1>Liste af Car</h1>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Navn</th>
            <th>Pris</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.carr)
        {
                    <tr>
                    <tr class="table-primary">
                <td>@c.Id</td>
                <td>@c.Name</td>
                        <td>@c.Pris</td>
                    </tr>
                @if (c is CarType)
                {
                    CarEnum pe = c as CarEnum;
                    <td>@pe.Slags</td>
                }
                else
                {
                    <td></td>
                }

                <td><a asp-page="Delete" asp-route-id="@c.Id">Delete</a> | <a asp-page="Edit" asp-route-id="@c.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

<p></p>
<p></p>
<form method="get">
    <button asp-page="Create" class="btn btn-primary">Opret car</button>
</form>
